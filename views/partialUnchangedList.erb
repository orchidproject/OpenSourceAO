
          <!-- assignment list -->
          <div class="row" ng-repeat = "a in aCopy | filter: unchanged" ng-show="editMode"  >
            <div class="col-sm-3 task-card task-draggable exisiting-task-droppable" 
            ng-show="taskExist(a)" 
            taskId = "{{a.task_id}}" 
            assignmentId = "{{a.id}}" 
            ng-mouseover="focus(a.task_id)" 
            ng-mouseout="unFocus(a.task_id)" 
            ng-class = "{'focus':getClass(a.task_id),'card':editMode,'card-fixed':!editMode}"
            ng-init = "initEditables()"
            > 
              <img ng-src = "{{getTaskIcon(a.task_id)}}" >
              <div ng-if="a.task !== null">
                  {{a.task.getTime()}}
              </div>
              <span ng-show="editMode" class="glyphicon glyphicon-move corner"></span> 
            </div>
            <div class="col-sm-3 card-fixed task-card exisiting-task-droppable" ng-hide="taskExist(a)" assignmentId = "{{a.id}}" > 
              <span class="glyphicon glyphicon-plus corner "></span> 
            </div>

            <div class="col-sm-6"> 

              <!-- player list -->
              <div 
              class = "player-card player-draggable player-droppable" 
              ng-show = "playerExist(a,1)" 
              playerHolder = "1" 
              playerId = {{a.player1}} 
              assignmentId = "{{a.id}}" 
              ng-mouseover="focus(0-a.player1-1)" 
              ng-mouseout="unFocus(0-a.player1-1)" 
              ng-class = "{'focus':getClass(0-a.player1-1),'card':editMode,'card-fixed':!editMode }"
              ng-init = "initEditables()"
              >
               
                <img ng-src = "{{getPlayerIcon(a.player1)}}" >
               <div class = "health" ><div style="height:{{getHealth(a.player1)}}"></div></div>
                <span ng-show="editMode" class="glyphicon glyphicon-move corner"></span>
              </div>

              <div class = "card-fixed player-card player-droppable" ng-hide="playerExist(a,1)" playerHolder = "1" playerId = "{{a.player1}}" assignmentId = "{{a.id}}" ng-init = "initEditables()">
                <span  class="glyphicon glyphicon-plus corner"></span>
              </div>
              <!-- player 1 2 deliminator -->

              <div 
              class = "player-card player-draggable player-droppable" 
              ng-show = "playerExist(a,2)" 
              playerHolder = "2" 
              playerId = {{a.player2}} 
              assignmentId = "{{a.id}}" 
              ng-mouseover="focus(0-a.player2-1)" 
              ng-mouseout="unFocus(0-a.player2-1)" 
              ng-class = "{'focus':getClass(0-a.player2-1),'card':editMode,'card-fixed':!editMode}"
              ng-init = "initEditables()"
              >
                <div class = "health" ><div style="height:{{getHealth(a.player2)}}"></div></div>
                <img ng-src = "{{getPlayerIcon(a.player2)}}" >
                <span ng-show="editMode" class="glyphicon glyphicon-move corner"></span>
              </div>
              <div class = "card-fixed player-card player-droppable" ng-hide = "playerExist(a,2)" playerHolder = "2" playerId = {{a.player2}} assignmentId = "{{a.id}}" ng-init = "initEditables()">
                <span class="glyphicon glyphicon-plus corner"></span>
              </div>
            </div>
            <!--player list end -->
            <div class="col-sm-2 card task-card" ng-show="editMode"> 
              <div class = "col-sm-12 btn btn-default btn-sm" ng-click = "deleteA(a)">
                Unassign
              </div>
            </div>
          </div >
          <!-- assignment list end -->

