<!-- assignment list -->
          <div class="row flickable" ng-repeat = "a in aCopy| filter: changed"   >
				 	  <div class="col-sm-3 task-card task-draggable exisiting-task-droppable" 
            ng-show="taskExist(a)" taskId = "{{a.task_id}}" 
            assignmentId = "{{a.id}}" 
            ng-mouseover="focus(a.task_id)" 
            ng-mouseout="unFocus(a.task_id)"
            ng-class = "{'focus':getClass(a.task_id),'card':editMode,'card-fixed':!editMode}"
            ng-init = "initEditables()"
            > 
              <img ng-src = "{{getTaskIcon(a.task_id)}}" >
	      
						  <span class="glyphicon glyphicon-move corner" ng-show="editMode"></span> 
              
              <div ng-if="a.task !== null">
                  {{a.task.getTime()}}
              </div>

            </div>

            <div class="col-sm-3 card-fixed transparent-5 task-card exisiting-task-droppable" ng-hide="taskExist(a)" assignmentId = "{{a.id}}" > 
              <span class="glyphicon glyphicon-plus corner "></span> 
            </div>

            <div class="col-sm-6"> 

              <!-- player list -->
              <div 
              class = "player-card player-draggable player-droppable" 
              ng-show = "playerExist(a,1)" 
              playerHolder = "1" 
              playerId = {{a.player1}} 
              assignmentId = "{{a.id}}" 
              ng-mouseover="focus(0-a.player1-1)" 
              ng-mouseout="unFocus(0-a.player1-1)" 
              ng-class = "{'focus':getClass(0-a.player1-1),'card':editMode,'card-fixed':!editMode}"
              ng-init = "initEditables()"
              >
                <img ng-src = "{{getPlayerIcon(a.player1)}}" >
                 <div class = "health"><div style="height:{{getHealth(a.player1)}}"></div></div>
                <span ng-show="editMode" class="glyphicon glyphicon-move corner"></span>
              </div>

              <div class = "card-fixed player-card player-droppable transparent-5" ng-hide="playerExist(a,1)" playerHolder = "1" 
               playerId = "{{a.player1}}" 
               assignmentId = "{{a.id}}"
               ng-init = "initEditables()">
                 <img ng-src= "/img/{{showRequirement(a,0)}}.png"  >
                {{showRequirement(a,0)}}
                
                <span  class="glyphicon glyphicon-plus corner"></span>
              </div>
              <!-- player 1 2 deliminator -->

              <div 
              class = "player-card player-draggable player-droppable" 
              ng-show = "playerExist(a,2)" 
              playerHolder = "2" 
              playerId = {{a.player2}} 
              assignmentId = "{{a.id}}" 
              ng-mouseover="focus(0-a.player2-1)" 
              ng-mouseout="unFocus(0-a.player2-1)" 
              ng-init = "initEditables()"
              ng-class = "{'focus':getClass(0-a.player2-1),'card':editMode,'card-fixed':!editMode}"  
              >
                <img ng-src = "{{getPlayerIcon(a.player2)}}" >
                 <div class = "health"><div style="height:{{getHealth(a.player2)}}"></div></div>
                <span ng-show="editMode" class="glyphicon glyphicon-move corner"></span>
              </div>

              <div class = "card-fixed player-card player-droppable transparent-5" 
                   ng-hide = "playerExist(a,2)" playerHolder = "2" 
                   playerId = {{a.player2}} 
                   assignmentId = "{{a.id}}"
                   ng-init = "initEditables()">
                   <img ng-src= "/img/{{showRequirement(a,1)}}.png" >
                  {{showRequirement(a,1)}}
                  
                <span class="glyphicon glyphicon-plus corner"></span>
              </div>
            </div>
            <!--player list end -->

            <!-- buttons -->
            <div ng-show="editMode" class="col-sm-2 card task-card"> 
              <div class = "col-sm-12 btn btn-primary btn-sm" ng-disabled="allowConfirmSingle(a)" ng-click = "confirmSingle(a)">
                confirm
              </div>
              <div class = "col-sm-12 btn btn-default btn-sm" ng-click = "deleteA(a)">
                Unassign
              </div>
            </div>
            <!-- buttons end-->

          </div >
          <!-- assignment list end -->

         
